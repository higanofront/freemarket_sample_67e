%h2 会員情報入力
= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true  do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :"ニックネーム"
    %br/
    = f.text_field :nickname, autofocus: true, placeholder: "例)フリマ太郎"
  .field
    = f.label :"メールアドレス"
    %br/
    = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .field
    = f.label :"パスワード"
    -# - if @minimum_password_length
    -#   %em
    -#     (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
  .field
    = f.label :"パスワード(再確認)"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記と同じ文字を入力"
  %p 本人確認
  .field
    = f.label :"お名前(全角)"
    %br/
    = f.text_field :last_name, placeholder: "例)山田"
    = f.text_field :first_name, placeholder: "例)彩"
  .field
    = f.label :"お名前カナ(全角)"
    %br/
    = f.text_field :last_hurigana, placeholder: "例)ヤマダ"
    = f.text_field :first_hurigana, placeholder: "例)アヤ"
  .field
    = f.label :"生年月日"
    %br/
  != sprintf(f.date_select(:birthday, {with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'}),'年','月')+'日'
  .field
    = f.label :"郵便番号"
    %br/
    = f.text_field :postcode, placeholder: "例)123-4567"
  .field
    = f.label :"都道府県"
    %br/
    = f.text_field :prefecture, placeholder: "例)フリマ太郎"
  .field
    = f.label :"市区町村"
    %br/
    = f.text_field :city, placeholder: "例)大阪市中央区"
  .field
    = f.label :"番地"
    %br/
    = f.text_field :block, placeholder: "例)難波５丁目１−６０"
  .field
    = f.label :"建物名"
    %br/
    = f.text_field :room, placeholder: "例)なんばスカイオ１５階"
  .field
    = f.label :"電話"
    %br/
    = f.text_field :phone_number, placeholder: "例)050-3187-3522"

  .actions
    = f.submit "登録する"

