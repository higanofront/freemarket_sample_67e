%h2 会員情報入力
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :"ニックネーム"
    %br/
    = f.text_field :nickname, autofocus: true, placeholder: "例)フリマ太郎"
  .field
    = f.label :"メールアドレス"
    %br/
    = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .field
    = f.label :"パスワード"
    -# - if @minimum_password_length
    -#   %em
    -#     (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
  .field
    = f.label :"パスワード(再確認)"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記と同じ文字を入力"
  %p 本人確認
  .field
    = f.label :"お名前(全角)"
    %br/
    = f.text_field :first_name, placeholder: "例)山田"
    = f.text_field :last_name, placeholder: "例)彩"
  .field
    = f.label :"お名前カナ(全角)"
    %br/
    = f.text_field :first_hurigana, placeholder: "例)ヤマダ"
    = f.text_field :last_hurigana, placeholder: "例)アヤ"
  .field
    = f.label :"生年月日"
    %br/
  %select.select-year{:name => "year"}
    %option{:value => ""} --
    %option{:value => "2020"} 2020
    %option{:value => "2019"} 2019
    %option{:value => "2018"} 2018
    %option{:value => "2017"} 2017
  %span 年
  %select.select-month{:name => "month"}
    %option{:value => ""} --
    %option{:value => "1"} 1
    %option{:value => "2"} 2
    %option{:value => "3"} 3
  %span 月
  %select.select-day{:name => "day"}
    %option{:value => ""} --
    %option{:value => "1"} 1
    %option{:value => "2"} 2
    %option{:value => "3"} 3
  %span 日
    

  .actions
    = f.submit "登録する"
